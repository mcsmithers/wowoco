@page
@model FormModel
<div class="container">
    <br />
    <img src="http://www.placepuppy.net/400/250"><br/><br/>
    <div class="col">
        <h2>Send a Card</h2>
        <form action="(webpage)" method="post">
            <div class="form-group"><label for="email"><i class="fa fa-envelope"></label></i><input inputmode="email" name="email" placeholder="name@fabulous.io" class="form-control" sr-only="email" required></div>
            <div class="form-group"><label for="name"></label><i class="fa fa-user"></i><input name="text" inputmode="verbatim" placeholder="Name" class="form-control" sr-only="name"></div>
            <div class="form-group"><label for="subject"></label><i class="fa fa-comment"></i><input name="text" inputmode="verbatim" placeholder="Subject" class="form-control" sr-only="subject"></div>
            <div class="form-row">
                <div class="form-group">
                    <label for="message"></label>
                    <i class="fa fa-comments"></i>
                    <textarea placeholder="Message" class="form-control js-auto-size" sr-only="message" maxlength="50"></textarea><div class="countdown"></div>
                </div>
            </div>

            <div class="form-group">
                <label for="event"></label>
                <i class="fa fa-birthday-cake"></i>
                <select name="event" class="form-control" sr-only="event">
                    <option value="birthday">Birthday</option>
                    <option value="holiday">Holiday</option>
                    <option value="thanks">Thank You</option>
                </select>
            </div><br />
            <label for="captcha">Prove you are human</label><div class="form-row"><div class="g-recaptcha" data-sitekey="6LctqEUUAAAAAHaN_sYP_vjTJgatqMmDr-l9OTdq" sr-only="captcha"></div></div>
            @section Scripts {
        <script src="~/lib/textarea-countdown.js"></script>
        <script src='https://www.google.com/recaptcha/api.js'></script>
        <script src="http://code.jquery.com/jquery-2.1.0.min.js"></script>
        <script src="jquery.textarea_autosize.min.js"></script>
        <script>
            $('textarea.js-auto-size').textareaAutoSize();
        </script>
            }
</div>
        </form>
        <button type="button" class="btn btn-primary active">Submit</button></br>
    </div>
<br/>
<hr>
@Html.Encode("WoWoCo")